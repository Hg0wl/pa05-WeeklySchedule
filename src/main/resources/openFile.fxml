<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="294.0" prefWidth="400.0">
      <children>
         <VBox alignment="CENTER" layoutY="8.0">
            <children>
               <Label alignment="CENTER" prefHeight="51.0" prefWidth="184.0" text="WELCOME">
                  <font>
                     <Font size="24.0" />
                  </font>
               </Label>
               <Label alignment="TOP_CENTER" layoutX="20.0" prefHeight="74.0" prefWidth="319.0" text="Welcome to your weekly journal!! Enter the name of a bujo journal file or the name of a new week you would like to create. Then hit submit!" textAlignment="CENTER" wrapText="true" />
               <TextField fx:id="fileNameTextField" prefWidth="250.0" scaleX="0.88">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </TextField>
               <HBox alignment="CENTER" prefHeight="56.0" prefWidth="294.0" spacing="20.0">
                  <children>
                     <Button fx:id="exit" mnemonicParsing="false" text="Exit" />
                     <Button fx:id="submit" mnemonicParsing="false" text="Submit" />
                  </children>
               </HBox>
               <HBox alignment="CENTER" prefHeight="75.0" prefWidth="400.0" spacing="15.0">
                  <children>
                     <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <Label text="Max Events" />
                           <Spinner fx:id="eventMaxSpinner" editable="true" prefHeight="30.0" prefWidth="65.0" />
                        </children>
                     </VBox>
                     <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                        <children>
                           <Label text="Max Tasks" />
                           <Spinner fx:id="taskMaxSpinner" editable="true" prefHeight="30.0" prefWidth="65.0" />
                        </children>
                     </VBox>
                     <CheckBox fx:id="overrideCheckbox" prefHeight="30" prefWidth="200" text="Override Previous Maximums">
                     </CheckBox>
                  </children>
               </HBox>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
