<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene fx:id="categoryPopup" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="260.0" prefWidth="360.0">
        <children>
            <VBox alignment="TOP_CENTER" layoutX="37.0" prefHeight="283.0" prefWidth="286.0">
                <children>
                    <Label prefHeight="118.0" prefWidth="260.0" text="Enter one word to be the new category" textAlignment="CENTER" wrapText="true">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="catField" prefHeight="28.0" prefWidth="286.0">
                        <VBox.margin>
                            <Insets top="10.0" />
                        </VBox.margin>
                    </TextField>
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                        <children>
                            <Button fx:id="back" mnemonicParsing="false" text="Back" textFill="RED" />
                            <Button fx:id="enter" mnemonicParsing="false" text="Enter" textFill="#32fc00">
                                <HBox.margin>
                                    <Insets left="20.0" />
                                </HBox.margin>
                            </Button>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children></AnchorPane>
</Scene>
