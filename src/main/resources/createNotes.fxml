<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="526.0" prefWidth="418.0" style="-fx-background-color: radial-gradient(focus-angle 291deg , focus-distance 59% , center 50% 50% , radius 55% , #50889D, #6a5acd);">
        <children>
            <VBox alignment="CENTER" layoutX="14.0" prefHeight="527.0" prefWidth="418.0">
                <children>
                    <Label contentDisplay="CENTER" prefHeight="130.0" prefWidth="344.0" text="Write your Note or Quote" textAlignment="CENTER" textFill="#e1e1e1">
                        <font>
                            <Font name="System Bold" size="25.0" />
                        </font>
                    </Label>
                    <TextArea fx:id="notesText" prefHeight="266.0" prefWidth="474.0" style="-fx-control-inner-background: #86D8C3; -fx-prompt-text-fill: blue; -fx-text-fill: black;">
                        <VBox.margin>
                            <Insets right="10.0" />
                        </VBox.margin></TextArea>
                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                        <children>
                            <Button fx:id="back" mnemonicParsing="false" style="-fx-background-color: rEd;" text="Back" textFill="#e1e1e1" />
                            <Button fx:id="enter" mnemonicParsing="false" style="-fx-background-color: #2cbf07;" text="Enter" textFill="#e1e1e1" />
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children></AnchorPane>
</Scene>
