<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ComboBox?>
<Scene fx:id="eventPopup" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="343.0" prefWidth="360.0">
      <children>
         <VBox layoutX="37.0" prefHeight="344.0" prefWidth="286.0">
            <children>
               <TextField fx:id="nameField" prefHeight="47.0" prefWidth="266.0">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </TextField>
               <TextField fx:id="descriptionField" prefHeight="47.0" prefWidth="266.0">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </TextField>
               <TextField fx:id="dayField" prefHeight="47.0" prefWidth="266.0">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </TextField>
               <TextField fx:id="startTimeField" prefHeight="47.0" prefWidth="266.0">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </TextField>
               <TextField fx:id="durationMinField" prefHeight="47.0" prefWidth="266.0">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </TextField>
               <ComboBox fx:id="categoryField" prefWidth="150.0"  promptText="Categories" visibleRowCount="3">
                  <VBox.margin>
                     <Insets top="30.0" />
                  </VBox.margin>
               </ComboBox>
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Button fx:id="back" mnemonicParsing="false" text="Back" textFill="RED" />
                     <Button fx:id="enter" mnemonicParsing="false" text="Enter" textFill="#32fc00">
                        <HBox.margin>
                           <Insets left="20.0" />
                        </HBox.margin>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
